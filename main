server {
  listen 80 default_server;
  server_name *.robertakarobin.com robertakarobin.com *.robinakarobert.com robinakarobert.com;
  return 301 http://www.robertakarobin.com$request_uri;
}
server {
  listen 80;
  server_name dev.robertakarobin.com;
  root /var/www/_main;
  error_page 404 /error.html;
  location / {
    index index.html index.php;
    try_files $uri $uri/ =404;
    autoindex on;
  }
  location ~ \.php$ {
    include snippets/fastcgi-php.conf;
    fastcgi_pass unix:run/php/php7.0-fpm.sock;
  }
}
server {
  listen 80;
  server_name mailgun.robertakarobin.com;
  location / {
    proxy_pass http://localhost:3002;
  }
}
