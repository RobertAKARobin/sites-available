server {
  listen 80 default_server;
  server_name *.robertakarobin.com robertakarobin.com *.robinakarobert.com robinakarobert.com;
  return 301 http://www.robertakarobin.com$request_uri;
}
server {
  listen 80;
  server_name dev.robertakarobin.com;
  root /var/www/_main;
  error_page 404 /error.html;
  location / {
    index index.html index.php;
    try_files $uri $uri/ =404;
    autoindex on;
  }
  location ~ \.php$ {
    include snippets/fastcgi-php.conf;
    fastcgi_pass unix:run/php/php7.0-fpm.sock;
  }
}
server {
  listen 80;
  server_name *.ineedaprompt.com ineedaprompt.com;
  location / {
    proxy_pass http://localhost:3001;
    proxy_http_version 1.1;
  }
  listen 443 ssl;
  ssl_certificate /etc/letsencrypt/live/ineedaprompt.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/ineedaprompt.com/privkey.pem;
  include /etc/letsencrypt/options-ssl-nginx.conf;
  if ($scheme != "https") {
      return 301 https://$host$request_uri;
  }
}
server {
  listen 80;
  server_name mailgun.robertakarobin.com;
  location / {
    proxy_pass http://localhost:3002;
  }
}
